{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "outDir": "./dist/",
    "declaration": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "node_modules/segment-protocol/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
